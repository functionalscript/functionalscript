{
  "name": "functionalscript",
  "version": "0.7.0",
  "type": "module",
  "files": [
    "**/*.js",
    "**/*.d.ts"
  ],
  "description": "FunctionalScript is a purely functional subset of JavaScript",
  "scripts": {
    "prepack": "tsc --NoEmit false",
    "git-clean": "git clean -xf",
    "test20": "npm run prepack && node ./dev/tf/module.js",
    "test22": "tsc && node --experimental-strip-types ./dev/tf/module.ts",
    "test": "tsc && node ./dev/tf/module.ts",
    "index": "node ./dev/index/module.ts",
    "fsc": "node ./fsc/module.ts",
    "update": "npm run index && npm install"
  },
  "engines": {
    "node": ">=20"
  },
  "bin": {
    "fsc": "fsc/module.js",
    "fst": "dev/ft/module.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/functionalscript/functionalscript.git"
  },
  "author": "Sergey Shandar",
  "license": "AGPL-3.0-only",
  "keywords": [
    "lambda",
    "functional-programming",
    "closure",
    "pure-functional",
    "typescript",
    "programming-language",
    "lazy-evaluation"
  ],
  "bugs": {
    "url": "https://github.com/functionalscript/functionalscript/issues"
  },
  "homepage": "https://github.com/functionalscript/functionalscript#readme",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@typescript/native-preview": "^7.0.0-dev.20250802.1",
    "typescript": "^5.9.2"
  }
}
